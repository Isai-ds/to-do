<aura:component controller="TaskController" implements="force:hasRecordId">
    <aura:attribute name="data" type="Task" />
    <aura:attribute name="edit" type="Boolean" default="false"/>    
    <aura:attribute name="actionType" type="String" default="edit"/>    
    <aura:attribute name="user" type="User" /> 

    <aura:handler name="init" value="{!this}" action="{!c.onInit}"/>  
    <aura:registerEvent name="onDeleteTask"  type="c:deleteTaskEvent" />
    
    <li>
        <fieldset class="slds-form-element slds-form-element_compound">
            <div class="slds-form-element__control">
                <div class="slds-form-element__row">
                    <div class="slds-size_1-of-12">
                        <div class="slds-form-element">
                            <aura:if isTrue="{!v.edit}">
                                <div class="slds-checkbox">                                
                                    <lightning:input type="checkbox" aura:id="status"/>                                
                                </div>
                            </aura:if>                                
                        </div>
                    </div>
                    <div class="slds-size_8-of-12">                        
                        <div class="slds-form-element">
                            <input type="text" aura:id="subject" value="{!v.data.Name}" readonly="{!not(v.edit)}" class="slds-input"/>                                                           
                        </div>                        
                    </div>
                    <div class="slds-size_3-of-12">                        
                        <aura:if isTrue="{! not(v.edit)}">
                            <lightning:buttonIcon aura:id="edit" iconName="utility:edit" onclick="{! c.handleEdit }" alternativeText="Modificar" disabled="{!v.actionType == 'read'}"/>
                            <lightning:buttonIcon aura:id="delete" iconName="utility:delete" onclick="{! c.handleDelete }" alternativeText="Eliminar" disabled="{!v.actionType == 'read'}"/>                                
                            <aura:set attribute="else">
                                <lightning:buttonIcon iconName="utility:save" onclick="{! c.handleSave }" alternativeText="Guardar" />
                                <lightning:buttonIcon iconName="utility:close" onclick="{! c.handleClose }" alternativeText="Cerrar" />                                    
                            </aura:set>
                        </aura:if>                        
                    </div>
                </div>                
            </div>
        </fieldset>
    </li>
</aura:component>	
